<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:elevation="10dp"
        android:layout_margin="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/demo_image"
                android:src="@drawable/ppt_svg"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/grey"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/demo_image"
                android:background="@color/white"
                android:layout_margin="10dp"
                android:stretchColumns="2"
                >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Topic :"
                        android:textSize="20sp"
                        android:padding="10sp"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:layout_column="1"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Topic Content"
                        android:textSize="20sp"
                        android:padding="10sp"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:layout_column="2"
                        />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description :"
                        android:textSize="20sp"
                        android:padding="10sp"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:layout_column="1"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description Content"
                        android:textSize="20sp"
                        android:padding="10sp"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:layout_column="2"
                        android:maxLines="5"
                        />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Uploaded By :"
                        android:textSize="20sp"
                        android:padding="10sp"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:layout_column="1"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name of Uploader"
                        android:textSize="20sp"
                        android:padding="10sp"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:layout_column="2"
                        />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Size :"
                        android:textSize="20sp"
                        android:padding="10sp"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:layout_column="1"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Size in bytes"
                        android:textSize="20sp"
                        android:padding="10sp"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:layout_column="2"
                        />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Uploaded On :"
                        android:textSize="20sp"
                        android:padding="10sp"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:layout_column="1"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time_Here"
                        android:textSize="20sp"
                        android:padding="10sp"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:layout_column="2"
                        />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Download"
                        android:layout_column="1"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:layout_column="2"
                        />

                </TableRow>

            </TableLayout>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>