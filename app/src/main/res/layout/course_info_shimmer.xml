<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Resource_Courses">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/course_info_layout_shimmer"
        android:layout_margin="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/info_image_shimmer"
            android:background="@color/lightgrey"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/black"
            />

        <TextView
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:id="@+id/info_id_shimmer"
            android:background="@color/lightgrey"
            android:layout_toRightOf="@+id/info_image_shimmer"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:layout_marginLeft="20dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="60dp"
            />

        <TextView
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:id="@+id/info_name_shimmer"
            android:background="@color/lightgrey"
            android:layout_toRightOf="@+id/info_image_shimmer"
            android:layout_below="@id/info_id_shimmer"
            android:textSize="20sp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginRight="40dp"
            />

